@using KHCBUI.Models;
@model ProfileViewModel

@using (@Html.BeginForm("UserProfile", "SysUser", FormMethod.Post, new { @class = "smart-form client-form" }))
{
    <div class="container-fluid">
        <div class="row" style="margin-top:15px;">
            <div class="col-md-8">
                <div class="col-xs-12" style="padding-bottom: 10px;">
                    <div class="col-sm-3 col-md-4">
                        <label class="control-label">First Name:</label>
                    </div>
                    <div class="col-sm-9 col-md-8">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-sm", @placeholder = "First Name" })
                    </div>
                </div>
                <div class="col-xs-12" style="padding-bottom: 10px;">
                    <div class="col-sm-3 col-md-4">
                        <label class="control-label">Last Name:</label>
                    </div>
                    <div class="col-sm-9 col-md-8">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-sm", @placeholder = "Last Name" })
                    </div>
                </div>
                <div class="col-xs-12" style="padding-bottom: 10px;">
                    <div class="profile-userbuttons">
                        <button type="submit" class="btn btn-success btn-sm">Update</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    @Html.ImageFor(m => m.ImageUrl, new { width = "100%!important;", height = "150px", alt = "User Photo" })
                    @(Html.Kendo().Upload().Name("profileImageattachments").Async(async => async.Save("SaveUserImage", "SysProfile")
                     .Remove("RemoveUserImage", "SysProfile"))
                     .Events(e => e.Success("ProfileImage_onSuccess"))
                    )
                </div>
            </div>
        </div>
    </div>
}
