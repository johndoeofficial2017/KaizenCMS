@{
    Layout = null;
}
<div class="jarviswidget" data-widget-colorbutton="false"
     data-widget-editbutton="false"
     data-widget-togglebutton="false"
     data-widget-deletebutton="false"
     data-widget-fullscreenbutton="false"
     data-widget-custombutton="false"
     data-widget-collapsed="false"
     data-widget-sortable="false">
    <header class="button-header">
        <a class="btn btn-default" ng-click="SaveData();"
           ng-show="SysGL00102.Status == 1">
            <i class="glyphicon glyphicon-floppy-disk icon-large">
            </i><br />
            Save &amp; Close
        </a>
        <a class="btn btn-default" ng-click="UpdateData();"
           ng-show="SysGL00102.Status == 2">
            <i class="glyphicon glyphicon-floppy-disk icon-large">
            </i><br />
            Update &amp; Close
        </a>
        <a class="btn btn-default" ng-click="Delete();" ng-show="SysGL00102.Status == 2"><i class="glyphicon glyphicon-trash"></i><br />Delete </a>
        <a class="btn btn-default" ng-click="Clear();"><i class="glyphicon glyphicon-remove"></i><br />Clear </a>
        <a class="btn btn-default"><i class="glyphicon glyphicon-print"></i><br />Print </a>
        <a class="btn btn-default" ng-click="Cancel();"><i class="glyphicon glyphicon-remove-circle"></i><br />Cancel </a>
        <div class="smart-form pull-right">
            <label class="toggle">
                <input type="checkbox" id="demo-switch-to-pills" ng-model="SysGL00102.IsAfterSymbol" name="checkbox-toggle">
                <i data-swchon-text="TRUE" data-swchoff-text="FALSE"></i>Is After Symbol
            </label>
        </div>
    </header>
    <div class="no-border overflow">
        <div class="widget-body">
            <div class="row">
                <article class="col-md-12 col-lg-12">
                    <div class="row no-padding">
                        <form class="">
                            <fieldset>
                                <div class="row">
                                    <section class="col-md-12">
                                        <label class="col-sm-2 control-label text-left">Company</label>
                                        <div class="col-sm-4">
                                            <select kendo-drop-down-list
                                                    k-filter="'startswith'"
                                                    k-option-label="'-- Select Company --'"
                                                    k-ng-model="SysGL00102.CompanyID"
                                                    k-data-text-field="'CompanyName'"
                                                    k-value-primitive="true"
                                                    k-data-value-field="'CompanyID'"
                                                    k-data-source="Companies"
                                                    style="width: 100%"></select>
                                        </div>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col-md-12">
                                        <label class="col-sm-2 control-label text-left">Currency Code</label>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Currency Code"
                                                       maxlength="10" ng-model="SysGL00102.CurrencyCode" ng-disabled="SysGL00102.Status == 2" />
                                                <span class="input-group-btn input-group-sm" ng-show="SysGL00102.Status == 2">
                                                    <button class="btn btn-default input-sm"
                                                            ng-click="OpenkendoWindow('GL_Currency', 'ExchangeTablePopUp', SysGL00102.CurrencyCode, '')">
                                                        <span ng-show="SysGL00102.ExchangeTableID == undefined || SysGL00102.ExchangeTableID == ''">Select Table</span>
                                                        <span ng-show="SysGL00102.ExchangeTableID != undefined && SysGL00102.ExchangeTableID != '' && SysGL00102.Status==2">{{SysGL00102.ExchangeTableID}}</span>
                                                    </button>
                                                </span>
                                                <span class="input-group-btn input-group-sm" ng-show="SysGL00102.Status == 2 && SysGL00102.ExchangeTableID != undefined && SysGL00102.ExchangeTableID != ''">
                                                    <button class="btn btn-default input-sm"
                                                            ng-click="OpenExchangeRateWindow();">
                                                        <span ng-show="SysGL00102.ExchangeTableID == ''">Select Rate</span>
                                                        <span ng-show="SysGL00102.ExchangeRateID != undefined && SysGL00102.ExchangeRateID != '' && SysGL00102.Status==2">{{SysGL00102.ExchangeRate}}</span>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                        <label class="col-sm-2 control-label text-left">Currency Name</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" placeholder="Currency Name"
                                                   ng-model="SysGL00102.CurrencyName" />
                                        </div>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col-md-12">
                                        <label class="col-sm-2 control-label text-left">ISO Code</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" placeholder="ISO Code"
                                                   maxlength="3" ng-model="SysGL00102.ISOCode" />
                                        </div>
                                        <label class="col-sm-2 control-label text-left">Currency Symbol</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" placeholder="Currency Symbol"
                                                   maxlength="3" ng-model="SysGL00102.CurrencySymbol" />
                                        </div>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col-md-12">
                                        <label class="col-sm-2 control-label text-left">Decimal Digit</label>
                                        <div class="col-sm-4">
                                            <input type="number" class="form-control" placeholder="Decimal Digit"
                                                   ng-model="SysGL00102.DecimalDigit" />
                                        </div>
                                        <label class="col-sm-2 control-label text-left">Decimal Separator</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" placeholder="Decimal Separator"
                                                   maxlength="1" ng-model="SysGL00102.DecimalSeparator" />
                                        </div>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col-md-12">
                                        <label class="col-sm-2 control-label text-left">Group Separator</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" placeholder="Group Separator"
                                                   maxlength="1" ng-model="SysGL00102.GroupSeparator" />
                                        </div>
                                        <label class="col-sm-2 control-label text-left">Group Sizes</label>
                                        <div class="col-sm-4">
                                            <input type="number" class="form-control" placeholder="Group Sizes"
                                                   ng-model="SysGL00102.GroupSizes" />
                                        </div>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col-md-12">
                                        <label class="col-sm-2 control-label text-left">Unit</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" placeholder="Unit"
                                                   maxlength="5" ng-model="SysGL00102.Unit" />
                                        </div>
                                        <label class="col-sm-2 control-label text-left">Sub Unit</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" placeholder="Sub Unit"
                                                   maxlength="5" ng-model="SysGL00102.SubUnit" />
                                        </div>
                                    </section>
                                </div>
                                <div class="row">
                                    <section class="col-md-12">
                                        <label class="col-sm-2 control-label text-left">Unit Connector</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" placeholder="Unit Connector"
                                                   maxlength="5" ng-model="SysGL00102.UnitConnector" />
                                        </div>
                                    </section>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>