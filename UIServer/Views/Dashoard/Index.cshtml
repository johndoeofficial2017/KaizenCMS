@{
    Layout = null;
}


<div ng-controller="DashoardController">
    <div class="widget" id="widget-CMS_Dashboard">
        <div class="widget-body">
            <div class="well-lg">
                <div class="row">
                    <div class="col-md-6">
                        <div class="col-lg-12">
                            <div class="widget">
                                <div class="widget-header bordered-bottom bordered-themeprimary">
                                    <span class="widget-caption">
                                        <strong class="no-margin-bottom font-120">
                                            Cases
                                        </strong>
                                    </span>
                                </div>
                                <div class="widget-body container-fluid padding-top-10">
                                    <form role="form" class="container-fluid">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="demo-section k-content">
                                                    <h4>Linear Gauge</h4>
                                                    <div kendo-lineargauge
                                                         k-scale="{ min:0, max: 50, vertical: false}"
                                                         ng-model="selectedNumber"></div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="box wide">
                                                    <h4>Value</h4>
                                                    <input kendo-slider k-min="0" k-max="50" k-show-buttons="false" k-small-step="5" k-large-step="10" ng-model="selectedNumber">
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="widget">
                                <div class="widget-header bordered-bottom bordered-themeprimary">
                                    <span class="widget-caption">
                                        <strong class="no-margin-bottom font-120">
                                            Budget
                                        </strong>
                                    </span>
                                </div>
                                <div class="widget-body container-fluid padding-top-10">
                                    <div kendo-chart
                                         k-legend="{ position: 'bottom' }" k-title="{ text: 'aaaaaaaaa' }"
                                         k-chart-area="{ background: ''}"
                                         k-series-defaults="{ type: 'line',style: 'smooth',missingValues:'interpolate'}"
                                         k-series="[{ field: 'BudgetAmount', name: 'BudgetAmount' },{ field: 'ArchiveAmount', name: 'ArchiveAmount' }]"
                                         k-category-axis="{field: 'PERIODID', labels: {rotation: -90} ,crosshair: {visible: true}}"
                                         k-value-axis="{min:0,max:800,plotBands: [{ from: 95, to: 100, color: 'red' }]}"
                                         k-tooltip="{visible: true,format: 'N0',template: ' #= value # #= series.name #'}"
                                         k-data-source="electricity"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-lg-12">
                            <div class="widget">

                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="widget">
                                <div class="widget-header bordered-bottom bordered-themeprimary">
                                    <span class="widget-caption">
                                        <strong class="no-margin-bottom font-120">
                                            Target
                                        </strong>
                                    </span>
                                </div>
                                <div class="widget-body container-fluid padding-top-10">
                                    <div class="col-lg-12">
                                        <div class="col-md-6">
                                            <div id="gauge-container">
                                                <span kendo-radialgauge
                                                      pointer="[{value: 20,color:'#c20000',cap: { size: 0.15 }}, {value: 70,color:'#ff7a00',cap: { size:0.1 }}, {value: 90,color:'#ffc700'}]"
                                                      k-scale="{ min:minValue, max: maxValue,ranges:[{from: 0,to: 20,color:'#ffc700'}, {from: 20,to: 50,color: '#ff7a00'}, {from: 50,to: 100,color:'#c20000'}]}">
                                                </span>
                                                <input kendo-slider k-min="0" k-max="100" k-show-buttons="false" k-show-labels="false"
                                                       k-small-step="10" k-large-step="20" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div kendo-lineargauge
                                                 k-scale="{ min:0, max: 50, vertical: true}"
                                                 ng-model="selectedNumber"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        #gauge-container {
            background: transparent url("../css/Images/gauge-container-partial.png") no-repeat 50% 50%;
            width: 386px;
            height: 386px;
            text-align: center;
            margin: 0 auto 30px auto;
        }
        #gauge-container > span {
            display: block;
            width: 350px;
            height: 300px;
            margin: 0 auto;
        }
        #gauge-container .k-slider {
            margin-top: -15px;
            width: 140px;
        }
    </style>
    <script type="text/javascript">
        // alert('sssssssss');
        //$(document).ready(function() {
        //    $("#chart").data("kendoChart").dataSource.read({ test: "test" });
        //});
    </script>
</div>
