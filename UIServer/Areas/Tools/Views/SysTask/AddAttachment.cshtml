@{
    Layout = null;
}
<style>
    .k-panelbar .k-tabstrip > .k-content, .k-tabstrip > .k-content {
        margin: 0px;
    }
</style>

<div class="jarviswidget" data-widget-colorbutton="false"
     data-widget-editbutton="false"
     data-widget-togglebutton="false"
     data-widget-deletebutton="false"
     data-widget-fullscreenbutton="false"
     data-widget-custombutton="false"
     data-widget-collapsed="false"
     data-widget-sortable="false"
     s>

    <header class="button-header">
        <a class="btn btn-default" ng-click="SaveData();"
           ng-show="Sys00100.Status == 1">
            <i class="glyphicon glyphicon-floppy-disk icon-large">
            </i><br />
            Save &amp; Close
        </a>
        <a class="btn btn-default" ng-click="Cancel();"><i class="fa fa-arrow-left"></i><br />Back </a>
    </header>


    <div class="no-border overflow">

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->
            <input class="form-control" type="text">
        </div>
        <!-- end widget edit box -->
        <!-- widget grid -->
        <section id="widget-grid">

            <div class="row" id="widget-CMS_CaseTypeGraphView">

                <!-- NEW WIDGET START -->
                <article class="col-md-12 col-lg-12 separator">
                    <!-- widget content-->
                    <div class="widget-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <legend>
                                    Task Maintenance
                                </legend>
                            </fieldset>
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 col-xs-12 control-label text-left">Task Type</label>
                                                <div class="col col-sm-8 col-xs-12">
                                                    <select kendo-drop-down-list
                                                            k-filter="'startswith'"
                                                            k-option-label="'-- Select Task Type --'"
                                                            k-ng-model="SelectedLookUp.SelectedTaskType"
                                                            k-data-text-field="'TaskTypeName'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'TaskTypeID'"
                                                            k-data-source="TaskTypeList"
                                                            k-on-change="TaskTypeChanged()"
                                                            ng-disabled="Sys00100.Status == 2"
                                                            style="width: 100%"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Priority</label>
                                                <div class="col col-sm-8">
                                                    <select kendo-drop-down-list
                                                            k-filter="'startswith'"
                                                            k-option-label="'-- Select Priority --'"
                                                            k-ng-model="SelectedLookUp.SelectedPriority"
                                                            k-data-text-field="'PriorityName'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'PriorityID'"
                                                            k-data-source="PriorityList"
                                                            k-on-change="PriorityChanged()"
                                                            ng-disabled="Sys00100.Status == 2"
                                                            style="width: 100%"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Task Title</label>
                                                <div class="col col-sm-8">
                                                    <input type="text" ng-disabled="Sys00100.Status == 2" class="form-control input-sm" placeholder="Task title"
                                                           ng-model="Sys00100.TaskTitle" char-limit="50" maxlength="50" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Task Description</label>
                                                <div class="col col-sm-8">
                                                    <textarea id="TaskDescription" ng-disabled="Sys00100.Status == 2" rows="4" cols="50" ng-model="Sys00100.TaskDescription" style="width: 100%;"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Task Start Date</label>
                                                <div class="col col-sm-8">
                                                    <input kendo-date-picker ng-disabled="Sys00100.Status == 2"
                                                           k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                           k-format="'dd/MM/yyyy'"
                                                           k-ng-model="Sys00100.TaskStartDate" style="width: 100%;" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Task End Date</label>
                                                <div class="col col-sm-8">
                                                    <input kendo-date-picker ng-disabled="Sys00100.Status == 2"
                                                           k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                           k-format="'dd/MM/yyyy'"
                                                           k-ng-model="Sys00100.TaskEndDate" style="width: 100%;" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Assign Date</label>
                                                <div class="col col-sm-8">
                                                    <input kendo-date-picker ng-disabled="Sys00100.Status == 2"
                                                           k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                           k-format="'dd/MM/yyyy'"
                                                           k-ng-model="Sys00100.AssignDate" style="width: 100%;" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">User Assign To</label>
                                                <div class="col col-sm-8">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control"
                                                               placeholder="UserName" ng-model="Sys00100.UserAsginTO" readonly>
                                                        <span class="input-group-btn input-group-sm" ng-disabled="Sys00100.Status == 2" ng-click="OpenkendoWindow('KaizenUser',null,'UserAssignTO')">
                                                            <a href="javascript:void(0);" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></a>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset ng-show="Sys00100.Status == 2">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Task Description</label>
                                                <div class="col col-sm-8">
                                                    <textarea id="TaskDescription" rows="4" cols="50" ng-model="Sys00101.TaskDescription" style="width: 100%;"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Task Date</label>
                                                <div class="col col-sm-8">
                                                    <input kendo-date-picker
                                                           k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                           k-format="'dd/MM/yyyy'"
                                                           k-ng-model="Sys00101.TaskDate" style="width: 100%;" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">User Assign To</label>
                                                <div class="col col-sm-8">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control"
                                                               placeholder="UserName" ng-model="Sys00101.UserAsginTO" readonly>
                                                        <span class="input-group-btn input-group-sm" ng-click="OpenkendoWindow('KaizenUser',null,'UserAssignTOSys00101')">
                                                            <a href="javascript:void(0);" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></a>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left"></label>
                                                <div class="col col-sm-8">
                                                    <div class="form-controls">
                                                        <button class="btn btn-primary" ng-show="Sys00100.Status == 2" ng-click="AddAttachment()">Attachment</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <br />
                            <fieldset>
                                <div class="form-controls">
                                    <button class="btn btn-primary" ng-show="Sys00100.Status == 2" ng-click="SaveDataSys00101()">Save Action</button>
                                </div>
                            </fieldset>
                            <br />
                            <fieldset ng-show="Sys00101List.length > 0">
                                <div class="form-group">
                                    <table class="table table-bordered table-hover table-responsive">
                                        <thead>
                                            <tr>
                                                <th class="text-align-center">Task ID</th>
                                                <th class="text-align-center">Task Date</th>
                                                <th class="text-align-center">User Assign To</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="obj in Sys00101List">
                                                <td class="col-md-2">{{obj.TaskID}}</td>
                                                <td class="col-md-4">
                                                    <input kendo-date-picker disabled
                                                           k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                           k-format="'dd/MM/yyyy'"
                                                           k-ng-model="obj.TaskDate" style="width: 100%;" />
                                                </td>
                                                <td class="col-md-2">{{obj.UserAsginTO}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </article>
            </div>
            <!-- End Body -->
        </section>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->
</div>







