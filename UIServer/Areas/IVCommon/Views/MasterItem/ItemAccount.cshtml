                                    <div class="input col col-md-4">
                                        <div class="input-group">
                                            <input kendo-masked-text-box type="text" class="form-control" placeholder="Trade Discount Account Number"
                                                   k-mask="'{{MY.GLFormat}}'" ng-model="IV00101.TradeDiscountAccount.ACTNUMBR" readonly />
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" ng-click="OpenkendoWindow('GL_GL','PopUp',null,'ItemTradeDiscount')"><span class="glyphicon glyphicon-search"></span></button>
