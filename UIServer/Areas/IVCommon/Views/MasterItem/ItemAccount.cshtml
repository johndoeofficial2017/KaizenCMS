                                            <input kendo-masked-text-box type="text" class="form-control" placeholder="Sales Return Account Number"
                                                   k-mask="'{{MY.GLFormat}}'" ng-model="IV00101.SalesReturnAccount.ACTNUMBR" readonly />
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" ng-click="OpenkendoWindow('GL_GL','PopUp',null,'ItemSalesReturn')"><span class="glyphicon glyphicon-search"></span></button>
                                            </span>
                                        </div>
