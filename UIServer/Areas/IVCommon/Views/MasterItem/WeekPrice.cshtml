
@{
    Layout = null;
}
<div class="jarviswidget" data-widget-colorbutton="false"
     data-widget-editbutton="false"
     data-widget-togglebutton="false"
     data-widget-deletebutton="false"
     data-widget-fullscreenbutton="false"
     data-widget-custombutton="false"
     data-widget-collapsed="false"
     data-widget-sortable="false">

    <header class="button-header">
        <a class="btn btn-default" ng-click="SaveWeekData();"
           ng-show="PageStatus==1">
            <i class="glyphicon glyphicon-floppy-disk icon-large">
            </i><br />
            Save &amp; Close
        </a>
        <a class="btn btn-default" ng-click="UpdateWeekData();"
           ng-show="PageStatus == 2">
            <i class="glyphicon glyphicon-floppy-disk icon-large">
            </i><br />
            Update &amp; Close
        </a>
        <a class="btn btn-default" ng-click="Cancel();"><i class="glyphicon glyphicon-remove-circle"></i><br />Cancel </a>
    </header>

    <!-- widget div-->
    <div class="no-border overflow">

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->
            <input class="form-control" type="text">
        </div>
        <!-- end widget edit box -->
        <!-- widget content -->
        <div class="widget-body">

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <!-- NEW WIDGET START -->
                    <article class="col-md-12 col-lg-12 separator">
                        <div class="row no-padding">
                            <form class="">
                                <fieldset class="margin-bottom-5">
                                    <div class="form-group">
                                        <label class="col col-md-2 control-label txt-color-red bold">Item</label>
                                        <div class="input col col-md-4">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Item ID"
                                                       ng-model="IV00150.ItemID" readonly />
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default" ng-click="OpenkendoWindow('IV_MasterItem',null,'WeekItem')"><span class="glyphicon glyphicon-search"></span></button>
                                                </span>
                                            </div>
                                        </div>
                                        <label class="col col-md-2 control-label txt-color-red bold">Site</label>
                                        <div class="input col col-md-4">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Site ID" ng-model="IV00150.SiteID" readonly />
                                                <span class="input-group-btn">
                                                    <button class="btn btn-default" ng-click="OpenkendoWindow('IV_Site',null,'WeekSite')"><span class="glyphicon glyphicon-search"></span></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <div class="row">
                                        <section class="col-md-12">
                                            <div class="col-sm-6 no-padding margin-bottom-5">
                                                <label class="col-sm-4 control-label text-left txt-color-red bold">Currency</label>
                                                <div class="col-sm-8">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" placeholder="Currency"
                                                               ng-model="IV00150.CurrencyCode"
                                                               data-bv-notempty="true" readonly
                                                               data-bv-notempty-message="The Currency is required and cannot be empty" />
                                                        <div class="input-group-btn input-group-sm" ng-disabled="IV00150.CurrencyCode == undefined || IV00150.CurrencyCode == ''"
                                                             ng-click="OpenkendoWindow('GL_CurrencyLookUp')">
                                                            <a href="javascript:void(0);" class="btn btn-default">T</a>
                                                        </div>
                                                        <div class="input-group-btn input-group-sm" ng-hide="IV00150.CurrencyCode == undefined || IV00150.CurrencyCode == '' || IV00150.ExchangeTableID == undefined || IV00150.ExchangeTableID == ''"
                                                             ng-click="OpenkendoWindow('GL_CurrencyLookUpExchangeTable',IV00150.CurrencyCode);">
                                                            <a href="javascript:void(0);" class="btn btn-default" ng-show="IV00150.ExchangeRate == undefined || IV00150.ExchangeRate == '' || IV00150.ExchangeRate == 0">Select Rate</a>
                                                            <a href="javascript:void(0);" class="btn btn-default" ng-hide="IV00150.CurrencyCode == undefined || IV00150.CurrencyCode == ''">{{IV00150.ExchangeRate}}</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col-md-12">
                                            <div class="widget no-margin-bottom">
                                                <div class="widget-body">
                                                    <div class="col-md-12">
                                                        <table class="table table-striped table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th class="text-align-center col-md-4">
                                                                        Week Day ID
                                                                    </th>
                                                                    <th class="text-align-center col-md-4">
                                                                        Week Day Name
                                                                    </th>
                                                                    <th class="text-align-center col-md-4">
                                                                        Unit Price
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr ng-repeat="days in WeekDetails">
                                                                    <td>
                                                                        <input type="hidden" ng-model="IV00150List[$index].ItemID" />
                                                                        <input type="hidden" ng-model="IV00150List[$index].SiteID" />
                                                                        <input type="hidden" ng-model="IV00150List[$index].CurrencyCode" />
                                                                        <input type="hidden" ng-model="IV00150List[$index].DecimalDigit" />
                                                                        <input type="hidden" ng-model="IV00150List[$index].ExchangeRate" />
                                                                        <input type="hidden" ng-model="IV00150List[$index].IsMultiply" />
                                                                        <label ng-model="IV00150List[$index].WeekDayID" ng-class="['control-label', {'txt-color-red bold': column.IsRequired }]">{{days.WeekDayID}}</label>
                                                                    </td>
                                                                    <td>
                                                                        <label ng-class="['control-label', {'txt-color-red bold': column.IsRequired }]">{{days.WeekDayName}}</label>
                                                                    </td>
                                                                    <td>
                                                                        <label class="input col col-md-4">
                                                                            <input type="text" class="form-control" maxlength="10" placeholder="Unit Price"
                                                                                   ng-model="IV00150List[$index].UnitPrice">
                                                                        </label>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                </div>
                                            </div>
                                        </section>
                                    </div>

                                </fieldset>
                            </form>
                        </div>
                    </article>
                </div>
            </div>
            <!-- End Body -->
        </div>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->
</div>