@{
    Layout = null;
}
<div class="jarviswidget" data-widget-colorbutton="false"
     data-widget-editbutton="false"
     data-widget-togglebutton="false"
     data-widget-deletebutton="false"
     data-widget-fullscreenbutton="false"
     data-widget-custombutton="false"
     data-widget-collapsed="false"
     data-widget-sortable="false">

    <header class="button-header">
        <a class="btn btn-default" ng-click="SaveData();"
           ng-show="IV00011.Status == 1">
            <i class="glyphicon glyphicon-floppy-disk icon-large">
            </i><br />
            Save &amp; Close
        </a>
        <a class="btn btn-default" ng-click="UpdateData();"
           ng-show="IV00011.Status == 2">
            <i class="glyphicon glyphicon-floppy-disk icon-large">
            </i><br />
            Update &amp; Close
        </a>
        <a class="btn btn-default" ng-click="Delete();" ng-show="IV00011.Status == 2"><i class="glyphicon glyphicon-trash"></i><br />Delete </a>
        <a class="btn btn-default" ng-click="Clear();"><i class="glyphicon glyphicon-remove"></i><br />Clear </a>
        <a class="btn btn-default"><i class="glyphicon glyphicon-print"></i><br />Print </a>
        <a class="btn btn-default" ng-click="Cancel();"><i class="glyphicon glyphicon-remove-circle"></i><br />Cancel </a>
        <div class="smart-form pull-right padding-top-10">
            <label class="checkbox no-padding-top">
                <input type="checkbox" name="checkbox" ng-model="IV00011.BinTrack" />
                <i></i>Is Bin Track
            </label>
        </div>
    </header>

    <!-- widget div-->
    <div class="no-border overflow">
        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->
            <input class="form-control" type="text">
        </div>
        <!-- end widget edit box -->
        <!-- widget content -->
        <div class="widget-body">
            <div class="row">
                <!-- NEW WIDGET START -->
                <article class="col-md-12 col-lg-12">
                    <div class="row no-padding">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col col-md-2 control-label">Site ID</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Site ID"
                                               maxlength="10" ng-model="IV00011.SiteID"
                                               ng-disabled="IV00011.Status == 2">
                                    </label>
                                    <label class="col col-md-2 control-label">Site Name</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Site Name"
                                               ng-model="IV00011.SiteName" maxlength="50" />
                                    </label>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col col-md-2 control-label">Site Description</label>
                                    <label class="input col col-md-10">
                                        <textarea class="form-control" placeholder="Site Description"
                                                  ng-model="IV00011.SiteDescription" rows="3"></textarea>
                                    </label>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col col-md-2 control-label">Address</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Address"
                                               ng-model="IV00011.Address" maxlength="50" />
                                    </label>
                                    <label class="col col-md-2 control-label">Site Manger</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Site Manger"
                                               ng-model="IV00011.SiteManger" maxlength="50" />
                                    </label>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col col-md-2 control-label">Phone 01</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Phone 01"
                                               ng-model="IV00011.Phone01" maxlength="10" />
                                    </label>
                                    <label class="col col-md-2 control-label">Phone 02</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Phone 02"
                                               ng-model="IV00011.Phone02" maxlength="10" />
                                    </label>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col col-md-2 control-label">Phone 03</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Phone 03"
                                               ng-model="IV00011.Phone03" maxlength="10" />
                                    </label>
                                    <label class="col col-md-2 control-label">Phone 04</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Phone 04"
                                               ng-model="IV00011.Phone04" maxlength="10" />
                                    </label>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col col-md-2 control-label">Phone 05</label>
                                    <label class="input col col-md-4">
                                        <input type="text" class="form-control" placeholder="Phone 05"
                                               ng-model="IV00011.Phone05" maxlength="10" />
                                    </label>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </article>
            </div>
            <!-- End Body -->
        </div>
        <!-- end widget content -->
    </div>
    <!-- end widget div -->
</div>





