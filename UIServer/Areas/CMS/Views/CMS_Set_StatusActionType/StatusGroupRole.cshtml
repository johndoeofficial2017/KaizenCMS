@{
    Layout = null;//  "~/Views/Shared/_LayoutPopUP.cshtml";
}
<!-- widget grid -->
<section id="widget-grid" class="">
    <!-- row -->
    <div class="row">
        <!-- NEW WIDGET ROW START -->
        <!-- Widget ID (each widget will need unique ID)-->
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget no-margin-bottom" id="wid-id-4" data-widget-colorbutton="false" data-widget-editbutton="false">
                <!-- widget div-->
                <div class="no-padding-top">
                    <!-- widget content -->
                    <div class="widget-body">
                        <form id="GL_GLCategoryForm" class="form-horizontal"
                              data-bv-message="This value is not valid"
                              data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
                              data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
                              data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
                            <div class="row">
                                <div class="widget-body-toolbar">
                                    <a href="javascript:void(0);" class="btn btn-default" ng-click="Cancel();">
                                        <i class="fa fa-arrow-left"></i> Back
                                    </a>
                                </div>
                            </div>
                            <fieldset>
                                <legend>
                                    Status Group Roles Maintenance
                                </legend>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label text-left">Status Action Type</label>
                                    <div class="col-sm-4">
                                        <select kendo-drop-down-list
                                                k-ng-model="CM00003.SelectedStatusGroup"
                                                k-options="StatusGroupHasOptions"
                                                k-on-change="StatusGroupChangedForRoles()"
                                                style="width: 100%"></select>
                                    </div>
                                </div>
                            </fieldset>
                            
                            <fieldset>
                                <div class="form-group">
                                    <table class="table table-bordered table-hover table-responsive">
                                        <thead>
                                            <tr style="text-transform: capitalize;">
                                                <th class="col-sm-2 smart-form">
                                                    @*<label class="checkbox">
                                                        <input type="checkbox" name="checkbox" ng-click="UserAccessAllRoles();"
                                                               checkbox-all="Roles.isSelected" />
                                                        <i></i>Access All
                                                    </label>*@
                                                </th>
                                                <th>Role Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="role in Roles">
                                                <td class="col-sm-2 col-md-2 smart-form">
                                                    <label class="checkbox">
                                                        <input type="checkbox" name="checkbox" ng-model="role.isSelected" ng-click="UpdateStatusGroupRole(role)" />
                                                        <i></i>
                                                    </label>
                                                </td>
                                                <td>{{role.RoleName}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
        </article>
        <!-- end widget -->
    </div>
    <!-- WIDGET ROW END -->
    <!-- end row -->
</section>
<!-- end widget grid -->