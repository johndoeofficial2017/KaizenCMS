@{
    Layout = null;
}
<div class="jarviswidget" data-widget-colorbutton="false"
     data-widget-editbutton="false"
     data-widget-togglebutton="false"
     data-widget-deletebutton="false"
     data-widget-fullscreenbutton="false"
     data-widget-custombutton="false"
     data-widget-collapsed="false"
     data-widget-sortable="false">

    <header class="button-header">
        <a class="btn btn-default" ng-click="Cancel();"><i class="fa fa-arrow-left"></i><br />Back </a>
    </header>

    
    <div class="no-border overflow">

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->
            <input class="form-control" type="text">
        </div>
        <!-- end widget edit box -->
        <!-- widget grid -->
        <section id="widget-grid">

            <div class="row">

                <!-- NEW WIDGET START -->
                <article class="col-md-12 col-lg-12 separator">
                    <!-- widget content-->
                    <div class="widget-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <legend>
                                    Case Status Lookup Maintenance
                                </legend>
                            </fieldset>
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col-sm-4 control-label text-left">Status</label>
                                                <div class="col-sm-8">
                                                    <select kendo-drop-down-list
                                                            k-ng-model="CM00700.SelectedStatus"
                                                            k-options="CaseStatusHasOptions"
                                                            k-on-change="StatusChangedForLookups()"
                                                            style="width: 100%" ng-disabled="CM00061.status==2"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Field Code</label>
                                                <div class="col col-sm-8">
                                                    <select kendo-drop-down-list
                                                            k-ng-model="CM00060.SelectedField"
                                                            k-options="FieldCodeHasOptions"
                                                            k-on-change="FieldTypeChangedForCaseStatus()"
                                                            style="width: 100%" ng-disabled="CM00061.status==2"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Lookup ID</label>
                                                <label class="input col col-sm-8 col-xs-12">
                                                    <input type="text" class="form-control input-sm" placeholder="Lookup ID"
                                                           ng-model="CM00061.LookupID" char-limit="10" maxlength="10" ng-disabled="CM00061.status==2" />
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Lookup Name</label>
                                                <div class="col col-sm-8 col-xs-12">
                                                    <input type="text" class="form-control input-sm" placeholder="Lookup Name"
                                                           ng-model="CM00061.LookupName" char-limit="50" maxlength="50" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-controls">
                                    <button class="btn btn-primary" ng-click="AddNewLookup()" ng-show="CM00061.status == 0 || CM00061.status == 1">Add Lookup</button>
                                    <button class="btn btn-primary" ng-click="UpdateLookup()" ng-show="CM00061.status == 2">Update Lookup</button>
                                </div>
                            </fieldset>

                            <fieldset ng-show="LookupList.length > 0">
                                <div class="form-group">
                                    <table class="table table-bordered table-hover table-responsive">
                                        <thead>
                                        <tr>
                                            <th class="text-align-center">Case Status ID</th>
                                            <th class="text-align-center">Field Code</th>
                                            <th class="text-align-center">Lookup ID</th>
                                            <th class="text-align-center">Lookup Name</th>
                                            <th class="text-align-center">Edit</th>
                                            <th class="text-align-center">Delete</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr ng-repeat="field in LookupList" ng-class="{'deleted':field.status== 3}">
                                            <td class="col-md-2">{{field.CaseStatusID}}</td>
                                            <td class="col-md-2">{{field.FieldCode}}</td>
                                            <td class="col-md-4">{{field.LookupID}}</td>
                                            <td class="col-md-4">{{field.LookupName}}</td>
                                            <td class="text-align-center col-md-1" style="font-size: 20px;">
                                                <a href="" ng-click="EditLookup(field)"><span class="glyphicon glyphicon-edit myhover"></span></a>
                                            </td>
                                            <td class="text-align-center col-md-1" style="font-size: 20px;">
                                                <a href="" ng-click="RemoveLookup(field,$index)"><span class="glyphicon glyphicon-remove myhover"></span></a>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </article>
            </div>
            <!-- End Body -->
        </section>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->
</div>





