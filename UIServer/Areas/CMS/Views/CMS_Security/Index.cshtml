@{
    Layout = null;
}

<!-- widget grid -->
<div ng-controller="CMS_SecurityController">
    <div id="widget-CMS_Security">
        <div ng-show="SecurityPages.length > 0">
            <div ng-repeat="Page in SecurityPages">
                <div ng-include="Page.url">Content from blocks goes here</div>
            </div>
        </div>
        <div ng-show="SecurityPages.length == 0">
            <div kendo-toolbar k-options="toolbarOptions">
            </div>
            <div kendo-window="GridFilterWindow" k-title="'Filteration'" k-modal="true"
                 k-actions="['Pin', 'Refresh', 'Maximize', 'Close']"
                 k-width="600" k-resizable="true" k-visible="false"></div>
        </div>
    </div>
</div>


