@{
    Layout = null;
}
<div class="jarviswidget" data-widget-colorbutton="false"
     data-widget-editbutton="false"
     data-widget-togglebutton="false"
     data-widget-deletebutton="false"
     data-widget-fullscreenbutton="false"
     data-widget-custombutton="false"
     data-widget-collapsed="false"
     data-widget-sortable="false">

    <header class="button-header">
        <a class="btn btn-default" ng-click="Cancel();"><i class="fa fa-arrow-left"></i><br />Back </a>
    </header>


    <div class="no-border overflow">

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->
            <input class="form-control" type="text">
        </div>
        <!-- end widget edit box -->
        <!-- widget grid -->
        <section id="widget-grid">

            <div class="row">

                <!-- NEW WIDGET START -->
                <article class="col-md-12 col-lg-12 separator">
                    <!-- widget content-->
                    <div class="widget-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <legend>
                                    Case Type Graph Setup Maintenance
                                </legend>
                            </fieldset>
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 col-xs-12 control-label text-left">Case Type</label>
                                                <div class="col col-sm-8 col-xs-12">
                                                    <select kendo-drop-down-list
                                                            k-filter="'startswith'"
                                                            k-option-label="'-- Select Type --'"
                                                            k-ng-model="CM00029.SelectedCaseType"
                                                            k-data-text-field="'TrxTypeName'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'TRXTypeID'"
                                                            k-data-source="CaseTypes"
                                                            k-on-change="CaseTypeChangedForGraphSetup()"
                                                            style="width: 100%"
                                                            ng-disabled="CM00076.status == 2"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Select View</label>
                                                <div class="col col-sm-8">
                                                    <select kendo-drop-down-list
                                                            k-ng-model="CM00071.SelectedView"
                                                            k-options="ViewGraphHasOptions"
                                                            k-on-change="ViewChangedForGraphSetup()"
                                                            style="width: 100%"
                                                            k-rebind="ViewGraphHasOptions"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12  no-padding margin-bottom-5">
                                                <label class="col col-sm-4 col-xs-12 control-label text-left">Graph Name</label>
                                                <label class="input col col-sm-8 col-xs-12">
                                                    <input type="text" class="form-control" maxlength="50"
                                                           placeholder="Graph Name" ng-model="CM00076.GraphName">
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12  no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Graph Type</label>
                                                <div class="col col-sm-8">
                                                    <select kendo-drop-down-list
                                                            k-filter="'startswith'"
                                                            k-option-label="'-- Select Graph Type --'"
                                                            k-ng-model="CM00040.SelectedGraphType"
                                                            k-data-text-field="'GraphTypeName'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'GraphTypeID'"
                                                            k-data-source="GraphTypes"
                                                            k-on-change="GraphTypeChanged()"
                                                            style="width: 100%"></select>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12  no-padding margin-bottom-5">
                                                <label class="col col-sm-4 col-xs-12 control-label text-left">Graph Title</label>
                                                <label class="input col col-sm-8 col-xs-12">
                                                    <input type="text" class="form-control" maxlength="50"
                                                           placeholder="Graph Title" ng-model="CM00076.GraphTitle">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-controls">
                                    <button class="btn btn-primary" ng-click="AddNewGraphSetup()" ng-show="CM00076.status == 0 || CM00076.status == 1">Add Graph</button>
                                    <button class="btn btn-primary" ng-click="UpdateGraphSetup()" ng-show="CM00076.status == 2">Update Graph</button>
                                </div>
                            </fieldset>

                            <fieldset ng-show="CaseTypeGraphList.length > 0">
                                <div class="form-group">
                                    <table class="table table-bordered table-hover table-responsive">
                                        <thead>
                                            <tr>
                                                <th class="text-align-center">View ID</th>
                                                <th class="text-align-center">Graph Name</th>
                                                <th class="text-align-center">Graph Type ID</th>
                                                <th class="text-align-center">Graph Title</th>
                                                <th class="text-align-center">Edit</th>
                                                <th class="text-align-center">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="caseTypeGraph in CaseTypeGraphList" ng-class="{'deleted':caseTypeGraph.status== 3}">
                                                <td class="col-md-2">{{caseTypeGraph.ViewID}}</td>
                                                <td class="col-md-2">{{caseTypeGraph.GraphName}}</td>
                                                <td class="col-md-2">{{caseTypeGraph.GraphTypeID}}</td>
                                                <td class="col-md-4">{{caseTypeGraph.GraphTitle}}</td>
                                                <td class="text-align-center col-md-1" style="font-size: 20px;">
                                                    <a href="" ng-click="EditGraphSetup(caseTypeGraph)"><span class="glyphicon glyphicon-edit myhover"></span></a>
                                                </td>
                                                <td class="text-align-center col-md-1" style="font-size: 20px;">
                                                    <a href="" ng-click="RemoveCaseTypeGraphSetup(caseTypeGraph,$index)"><span class="glyphicon glyphicon-remove myhover"></span></a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </article>
            </div>
            <!-- End Body -->
        </section>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->
</div>





