@{
    Layout = null;
}
<div class="jarviswidget" data-widget-colorbutton="false"
     data-widget-editbutton="false"
     data-widget-togglebutton="false"
     data-widget-deletebutton="false"
     data-widget-fullscreenbutton="false"
     data-widget-custombutton="false"
     data-widget-collapsed="false"
     data-widget-sortable="false">

    <header class="button-header">
        <a class="btn btn-default" ng-click="Cancel();"><i class="fa fa-arrow-left"></i><br />Back </a>
    </header>


    <div class="no-border overflow">

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->
            <input class="form-control" type="text">
        </div>
        <!-- end widget edit box -->
        <!-- widget grid -->
        <section id="widget-grid">

            <div class="row">

                <!-- NEW WIDGET START -->
                <article class="col-md-12 col-lg-12 separator">
                    <!-- widget content-->
                    <div class="widget-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <legend>
                                    Case Type Views Maintenance
                                </legend>
                            </fieldset>
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 col-xs-12 control-label text-left">Case Type</label>
                                                <div class="col col-sm-8 col-xs-12">
                                                    <select kendo-drop-down-list
                                                            k-filter="'startswith'"
                                                            k-option-label="'-- Select Type --'"
                                                            k-ng-model="SelectedLookUp.SelectedType"
                                                            k-data-text-field="'TrxTypeName'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'TRXTypeID'"
                                                            k-data-source="CaseTypes"
                                                            k-on-change="CaseTypeChangedForViews()"
                                                            style="width: 100%"></select>                                                                                                       
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 col-xs-12 control-label text-left">View Name</label>
                                                <label class="input col col-sm-8 col-xs-12">
                                                    <input type="text" class="form-control input-sm" placeholder="View Name"
                                                           ng-model="CM00071.ViewName" char-limit="50" maxlength="50" />
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12  no-padding margin-bottom-5">
                                                <label class="col col-sm-4 col-xs-12 control-label text-left">View Desciption</label>
                                                <label class="input col col-sm-8 col-xs-12">
                                                    <input type="text" class="form-control" maxlength="100"
                                                           placeholder="View Desciption" ng-model="CM00071.ViewDescription">
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12  no-padding margin-bottom-5">
                                                <label class="col col-sm-4 col-xs-12 control-label text-left">Table Source</label>
                                                <label class="input col col-sm-8 col-xs-12">
                                                    <select kendo-drop-down-list
                                                            k-filter="'startswith'"
                                                            k-option-label="'-- Select Table Source --'"
                                                            k-ng-model="SelectedLookUp.SelectedTableSource"
                                                            k-data-text-field="'TableSource'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'TableSource'"
                                                            k-data-source="TableSourceList"
                                                            k-on-change="TableSourceChangedForViews()"
                                                            style="width: 100%"></select>
                                                </label>
                                            </div>
                                        </div>                                        
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col">
                                                    <input type="checkbox"
                                                           class="checkbox style-0"
                                                           ng-model="CM00071.IsEmailable">
                                                    <span>Is Emailable</span>
                                                </label>
                                            </div>
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col">
                                                    <input type="checkbox"
                                                           class="checkbox style-0"
                                                           ng-model="CM00071.IsPrintable">
                                                    <span>Is Printable</span>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col">
                                                    <input type="checkbox"
                                                           class="checkbox style-0"
                                                           ng-model="CM00071.IsPivotTable">
                                                    <span>Is PivotTable</span>
                                                </label>
                                            </div>
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col">
                                                    <input type="checkbox"
                                                           class="checkbox style-0"
                                                           ng-model="CM00071.IsDefault">
                                                    <span>Is Default</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-controls">
                                    <button class="btn btn-primary" ng-click="AddNewView()" ng-show="CM00071.status == 0 || CM00071.status == 1">Add View</button>
                                    <button class="btn btn-primary" ng-click="UpdateView()" ng-show="CM00071.status == 2">Update View</button>
                                </div>
                            </fieldset>

                            <fieldset ng-show="CaseTypeViewsList.length > 0">
                                <div class="form-group">
                                    <table class="table table-bordered table-hover table-responsive">
                                        <thead>
                                            <tr>
                                                <th class="text-align-center">TRX Type ID</th>
                                                <th class="text-align-center">View Name</th>
                                                <th class="text-align-center">Edit</th>
                                                <th class="text-align-center">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="caseTypeView in CaseTypeViewsList" ng-class="{'deleted':caseTypeView.status== 3}">
                                                <td class="col-md-2">{{caseTypeView.TRXTypeID}}</td>
                                                <td class="col-md-4">{{caseTypeView.ViewName}}</td>
                                                <td class="text-align-center col-md-1" style="font-size: 20px;">
                                                    <a href="" ng-click="EditView(caseTypeView)"><span class="glyphicon glyphicon-edit myhover"></span></a>
                                                </td>
                                                <td class="text-align-center col-md-1" style="font-size: 20px;">
                                                    <a href="" ng-click="RemoveCaseTypeView(caseTypeView,$index)"><span class="glyphicon glyphicon-remove myhover"></span></a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </article>
            </div>
            <!-- End Body -->
        </section>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->
</div>





