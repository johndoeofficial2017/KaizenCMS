                                                <tr ng-repeat="caseTypeViewUser in CaseTypeViewUsers" ng-class="{'deleted':caseTypeViewUser.status== 3}">
                                                    <td class="col-md-2">{{caseTypeViewUser.ViewID}}</td>
                                                    <td class="col-md-4">{{caseTypeViewUser.UserName}}</td>
