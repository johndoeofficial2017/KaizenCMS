@{
    Layout = null;//  "~/Views/Shared/_LayoutPopUP.cshtml";
}

<div class="jarviswidget" data-widget-colorbutton="false"
     data-widget-editbutton="false"
     data-widget-togglebutton="false"
     data-widget-deletebutton="false"
     data-widget-fullscreenbutton="false"
     data-widget-custombutton="false"
     data-widget-collapsed="false"
     data-widget-sortable="false">

    <header class="button-header">
        <a href="javascript:void(0);" class="btn btn-default" ng-click="Cancel();">
            <i class="fa fa-arrow-left"></i>
            <br />
            Back
        </a>
        <a href="javascript:void(0);" class="btn btn-default" ng-click="UpdateViewsFields();">
            <i class="glyphicon glyphicon-floppy-disk"></i>
            <br />
            Update
        </a>
    </header>

    <div class="no-border overflow">

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->
            <input class="form-control" type="text">
        </div>
        <!-- end widget edit box -->
        <!-- widget grid -->
        <section id="widget-grid">

            <div class="row">

                <!-- NEW WIDGET START -->
                <article class="col-md-12 col-lg-12 separator">
                    <!-- widget content-->
                    <div class="widget-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <legend>
                                    Case Type Views Fields Maintenance
                                </legend>
                            </fieldset>
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Case Type</label>
                                                <div class="col col-sm-8">
                                                    <select kendo-drop-down-list
                                                            k-filter="'startswith'"
                                                            k-option-label="'-- Select Type --'"
                                                            k-ng-model="SelectedLookUp.SelectedType"
                                                            k-data-text-field="'TrxTypeName'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'TRXTypeID'"
                                                            k-data-source="CaseTypes"
                                                            k-on-change="CaseTypeViewFields_Changed()"
                                                            style="width: 100%"></select>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-sm-12 no-padding margin-bottom-5">
                                                <label class="col col-sm-4 control-label text-left">Select View</label>
                                                <div class="col col-sm-8">
                                                    <select kendo-drop-down-list
                                                            k-filter="'startswith'"
                                                            k-option-label="'-- Select Type --'"
                                                            k-ng-model="SelectedLookUp.SelectedView"
                                                            k-data-text-field="'ViewName'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'ViewID'"
                                                            k-data-source="CaseTypeViewsList"
                                                            k-on-change="ViewField_Changed()"
                                                            style="width: 100%"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            
                            <fieldset ng-show="CaseTypeViewsFieldsList.length > 0">
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <div class="form-group col-md-9">
                                        <table class="table table-bordered table-hover table-responsive">
                                            <thead>
                                                <tr style="text-transform: capitalize;">
                                                    <th class="text-align-center smart-form">
                                                        <label class="checkbox">
                                                            <input type="checkbox" name="checkbox" checkbox-all="DefaultViewSettings.isSelected" />
                                                            <i></i>
                                                        </label>
                                                    </th>
                                                    <th class="text-align-center">Field Name</th>
                                                    <th class="text-align-center">Field Display</th>
                                                    <th class="text-align-center">Field Order</th>
                                                    <th class="text-align-center">Field Width</th>
                                                    <th class="text-align-center">Is Emailable</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="field in CaseTypeViewsFieldsList">
                                                    <td class="text-align-center smart-form col-md-1">
                                                        <label class="checkbox">
                                                            <input type="checkbox" name="checkbox" ng-model="field.isSelected" 
                                                                   ng-click="UpdateCaseTypeViewsFields(field)" />
                                                            <i></i>
                                                        </label>
                                                    </td>
                                                    <td class="text-align-center col-md-2">
                                                        <input type="text" class="form-control" placeholder="Field Name" ng-model="field.FieldName" disabled="disabled" />
                                                    </td>
                                                    <td class="text-align-center col-md-4">
                                                        <input type="text" class="form-control" placeholder="Field Display" ng-model="field.FieldDisplay" />
                                                    </td>
                                                    <td class="text-align-center col-md-2">
                                                        <input type="number" class="form-control" placeholder="Field Order" ng-model="field.FieldOrder" />
                                                    </td>
                                                    <td class="text-align-center col-md-2">
                                                        <input type="number" class="form-control" placeholder="Field Width" ng-model="field.FieldWidth" />
                                                    </td>
                                                    <td class="text-align-center smart-form col-md-2">
                                                        <label class="checkbox">
                                                            <input type="checkbox" name="checkbox" ng-model="field.IsEmailable" />
                                                            <i></i>
                                                        </label>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-1"></div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </article>
            </div>
            <!-- End Body -->
        </section>
        <!-- end widget content -->

    </div>
</div>
