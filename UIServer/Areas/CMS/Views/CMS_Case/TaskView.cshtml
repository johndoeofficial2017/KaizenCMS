@{
    Layout = null;
}
<div class="no-padding no-border overflow">
    <div class="jarviswidget" data-widget-colorbutton="false"
         data-widget-editbutton="false"
         data-widget-togglebutton="false"
         data-widget-deletebutton="false"
         data-widget-fullscreenbutton="false"
         data-widget-custombutton="false"
         data-widget-collapsed="false"
         data-widget-sortable="false">

        <div class="no-border overflow">
            <div class="widget-body">
                <div class="row">
                    <article class="col-md-12 col-lg-12">
                        <div class="row no-padding margin-bottom-10">
                            <form>
                                <fieldset class="well well-10 well-10">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <legend class="margin-bottom-5 no-padding-b">
                                                Task
                                            </legend>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <section class="col col-md-4">
                                            <div class="row">
                                                <label class="col-md-4 no-padding-lr control-label text-left txt-color-red bold">Task Title</label>
                                                <div class="form-group col-md-8 no-padding-l">
                                                    <div class="input-group col-md-12">
                                                        <input type="text" class="form-control"
                                                               readonly
                                                               ng-model="CM00213.TaskTitle" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="col-md-4 no-padding-lr control-label text-left txt-color-red bold">Task ID</label>
                                                <div class="form-group col-md-8 no-padding-l">
                                                    <div class="input-group col-md-12">
                                                        <input type="text" class="form-control"
                                                               readonly
                                                               ng-model="CM00213.TaskID" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="col-md-4 no-padding-lr control-label text-left txt-color-red bold">Task Type</label>
                                                <div class="form-group col-md-8 no-padding-l">
                                                    <div class="input-group col-md-12">
                                                        <select kendo-drop-down-list disabled
                                                                k-ng-model="SelectedLookUp.TaskTypeID"
                                                                k-data-text-field="'TaskTypeName'"
                                                                k-value-primitive="true"
                                                                k-data-value-field="'TaskTypeID'"
                                                                k-data-source="TaskTypes"
                                                                style="width: 100%"></select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="col-md-4 no-padding-lr control-label text-left txt-color-red bold">Deal No.</label>
                                                <div class="form-group col-md-8 no-padding-l">
                                                    <div class="input-group col-md-12">
                                                        <input type="text" class="form-control"
                                                               readonly
                                                               ng-model="CM00213.CaseRef" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="col-md-4 no-padding-lr control-label text-left txt-color-red bold">Agent ID</label>
                                                <div class="form-group col-md-8 no-padding-l">
                                                    <div class="input-group col-md-12">
                                                        <input type="text" class="form-control"
                                                               readonly
                                                               ng-model="CM00213.AgentID" />
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                        <section class="col col-md-8">
                                            <div class="row">
                                                <label class="col-md-2 no-padding-lr control-label text-left">Task Description</label>
                                                <div class="form-group col-md-10 no-padding-l">
                                                    <textarea placeholder="Case Remarks"
                                                              class="bold text-error form-control ng-pristine ng-untouched ng-valid ng-empty"
                                                              readonly
                                                              ng-model="CM00213.TaskDescription" rows="4"></textarea>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="col-md-2 no-padding-lr control-label text-left">Task Start Date</label>
                                                <div class="form-group col-md-2 no-padding-l">
                                                    <input kendo-date-picker disabled
                                                           k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                           k-format="'dd/MM/yyyy'"
                                                           k-ng-model="CM00213.TaskStartDate" style="width: 100%;" />
                                                </div>
                                                <label class="col-md-2 no-padding-lr control-label text-left">Task End Date</label>
                                                <div class="form-group col-md-2 no-padding-l">
                                                    <input kendo-date-picker disabled
                                                           k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                           k-format="'dd/MM/yyyy'"
                                                           k-ng-model="CM00213.TaskEndDate" style="width: 100%;" />
                                                </div>
                                                <label class="col-md-2 no-padding-lr control-label text-left">Priority ID</label>
                                                <div class="form-group col-md-2 no-padding-lr">
                                                    <select kendo-drop-down-list disabled
                                                            k-ng-model="SelectedLookUp.PriorityID"
                                                            k-data-text-field="'PriorityName'"
                                                            k-value-primitive="true"
                                                            k-data-value-field="'PriorityID'"
                                                            k-data-source="TaskPriorities"
                                                            style="width: 100%"></select>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="col-md-2 no-padding-lr control-label text-left">AssignDate</label>
                                                <div class="form-group col-md-2 no-padding-l">
                                                    <input kendo-date-picker disabled
                                                           k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                           k-format="'dd/MM/yyyy'"
                                                           k-ng-model="CM00213.AssignDate" style="width: 100%;" />
                                                </div>
                                                <label class="col-md-2 no-padding-lr control-label text-left">Task Progress</label>
                                                <div class="form-group col-md-4 no-padding-l">
                                                    <input kendo-slider k-min="0" readonly
                                                           k-max="100" style="width: 100%"
                                                           k-show-buttons="true"
                                                           k-small-step="5"
                                                           k-large-step="10"
                                                           ng-model="CM00213.TaskProgress">
                                                </div>
                                            </div>
                                        </section>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </article>
                    <article class="col-md-12 col-lg-12">
                        <div class="row well no-padding margin-bottom-10">
                            <table class="table table-striped table-forum">
                                <tbody>
                                    <tr ng-repeat="taskaction in CM00214List">
                                        <td colspan="2">
                                            <table>
                                                <tr>
                                                    <td colspan="2" class="padding-tb5">
                                                        <div class="button-header inline-block">
                                                            <a href="#ajax/profile.html">
                                                                <strong>{{taskaction.taskaction}}</strong>
                                                            </a>
                                                            <input kendo-date-picker disabled
                                                                   k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                                   k-format="'dd/MM/yyyy'"
                                                                   k-ng-model="taskaction.TaskDate"
                                                                   style="width: 150px;" />
                                                            <div kendo-lineargauge
                                                                 k-scale="{ min:0, max: 100, vertical: false}"
                                                                 style="width: 100%"
                                                                 ng-model="taskaction.TaskProgress"></div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="" style="width: 5%;">
                                                        <div class="push-bit">
                                                            <a href="#ajax/profile.html">
                                                                <img ng-src="{{taskaction.PhotoExtension}}" alt="avatar" class="online" width="50">
                                                            </a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <p>
                                                            <div dynamic="taskaction.TaskDescription"></div>
                                                        </p>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <div class="button-header inline-block">
                                                <a ng-click="SaveTaskAction(false)" class="btn btn-default btn-header"><i class="glyphicon glyphicon-floppy-disk icon-large"></i><br>Save</a>
                                                <a ng-click="SaveTaskAction(true)" class="btn btn-default btn-header"><i class="glyphicon glyphicon-floppy-disk icon-large"></i><br>Save & Close</a>
                                                <a ng-click="GoBack()" class="btn btn-default">
                                                    <i class="glyphicon glyphicon-remove-circle">
                                                    </i><br>Cancel
                                                </a>
                                                <input kendo-slider k-min="0"
                                                       k-max="100" style="width: 300px"
                                                       k-show-buttons="true"
                                                       k-small-step="5"
                                                       k-large-step="10"
                                                       ng-model="CM00213.TaskProgress" />

                                                <input kendo-date-picker disabled
                                                       k-parse-formats="['yyyy-MM-ddTHH:mm:ss']"
                                                       k-format="'dd/MM/yyyy'"
                                                       k-ng-model="CM00214.TaskDate"
                                                       style="width: 150px;" />
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="" style="width: 5%;">
                                            <div class="push-bit">
                                                <a href="#ajax/profile.html">
                                                    <img ng-src="{{MY.PhotoExtension}}" alt="avatar" class="online" width="50">
                                                </a>
                                            </div>
                                            <small>{{MY.UserName}}</small>
                                        </td>
                                        <td>
                                            <div class="form-group col-md-12 no-padding no-margin">
                                                <textarea kendo-editor
                                                          k-ng-model="CM00214.TaskDescription"></textarea>


                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>


